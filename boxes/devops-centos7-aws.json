{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "source_ami": "ami-3548444c",
      "instance_type": "m3.medium",
      "ssh_username": "centos",
      "ami_name": "devops-centos7-x64 {{ isotime \"2006-01-02\" }}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files",
      "destination": "/tmp/files"
    },
    {
      "type": "shell",
      "execute_command": "sudo -S sh '{{.Path}}'",
      "expect_disconnect": true,
      "pause_before": "5s",
      "override": {
        "amazon-ebs": {
          "scripts": [
            "scripts/centos/cloud-init.sh",
            "scripts/centos/base.sh",
            "scripts/centos/git.sh",
            "scripts/centos/puppet.sh",
            "scripts/centos/docker.sh",
            "scripts/centos/aws-cli.sh",
            "scripts/centos/cleanup.sh",
            "scripts/centos/zerodisk.sh"
          ]
        }
      }
    }
  ]
}